{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "module": "Preserve",
    "target": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Vue
    "jsx": "preserve",
    "jsxFactory": "Vue.h",
    "jsxImportSource": "vue",
    
    // Bundler mode
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
